SELECT DOCTORS.NAME,
	ROUND(SUM((ATTENDANCES.HOURS * 150) + ((ATTENDANCES.HOURS * 15) * WORK_SHIFTS.BONUS) * 0.1),
		1) AS SALARY
FROM DOCTORS,
	ATTENDANCES,
	WORK_SHIFTS
WHERE DOCTORS.ID = ATTENDANCES.ID_DOCTOR
	AND WORK_SHIFTS.ID = ATTENDANCES.ID_WORK_SHIFT
GROUP BY DOCTORS.NAME
ORDER BY SALARY DESC;